<div class="wait_for_options_box">
  <div class="mbtm-10">
    <span class="mrt-6">Wait For</span>
    <%= text_field_tag "project[triggers_attributes][0][delay_amount]", @trigger.delay_amount, class: "mrt-6 w-50" %>
    <%= select_tag "project[triggers_attributes][0][delay_unit]", options_for_select(Trigger::DELAY_UNITS, @trigger.delay_unit), class: "w-100" %>
  </div>
  <div id="wait_for_options">
    <div class="mbtm-6"><%= radio_button_tag "project[triggers_attributes][0][delay_status]", "execute", @trigger.wait_for_should_execute? %><span class="mlt-3">Execute Trigger</span> </div>
    <div class="mbtm-6"><%= radio_button_tag "project[triggers_attributes][0][delay_status]", "disable", @trigger.wait_for_should_disable? %><span class="mlt-3">Disable Trigger</span></div>
    <div class="sep mbtm-10 mtop-6"></div>
  </div>
  <div id="wait_for_triggers_box">
    <div id="wait_for_triggers_area">
      <% @delayed_triggers.each_with_index do |d,i| %>
        <%= render partial: 'projects/trigger/wait_for_trigger', locals: { delayed_trigger: d, dt_idx: i } %>
      <% end %>
    </div>
    <div class="mbtm-6 button popup_active_btn dib" style="padding: 3px 10px;" id="add_wait_for_trigger">+ Event</div>
  </div>
</div>

<template id="wait_for_trigger_template">
  <%= render partial: 'projects/trigger/wait_for_trigger', locals: { delayed_trigger: DelayedTrigger.new, dt_idx: "{{dt_idx}}" } %>
</template>

<template id="wait_for_condition_template">
  <%= render partial: 'projects/trigger/wait_for_condition', locals: { condition: Condition.new, idx: "{{idx}}", dt_idx: "{{dt_idx}}" } %>
</template>
